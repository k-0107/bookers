<h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th><th>Body</th><th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book|%>
      <tr>
        <td><%=book.title%></td><td class="table_body"><%=book.body%></td>
        <td>
          <%=link_to("Show","/books/#{book.id}")%>
          <%=link_to("Edit","/books/#{book.id}/edit")%>
          <%=link_to("Destroy","/books/#{book.id}/destroy",{method: "post"})%>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
<div>
  <h3>New book</h3>
  <% @book.errors.full_messages.each do |message| %>
    <div class="form-error">
      <%= message %>
    </div>
  <% end %>
  <div class="form">
    <%= form_with model: @book, url: '/books/create', method: :post do |f| %>
      <p class="label">title</p>
      <%= f.text_field :title %>
    	
      <p class="label">body</p>
      <%= f.text_area :body %>
    	
      <%= f.submit 'Create Book' %>
    <% end %>
  </div>
  
</div>