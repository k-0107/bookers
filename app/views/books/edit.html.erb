<h1>Editing Book</h1>
  <% @book.errors.full_messages.each do |message| %>
    <div class="form-error">
      <%= message %>
    </div>
  <% end %>
  <%= form_with model: @book, url: "/books/#{@book.id}/update", method: :post do |f| %>
    <h4>title</h4>
    <%= f.text_field :title %>
  	
    <h4>body</h4>
    <%= f.text_area :body %>
  	
    <%= f.submit 'Update Book' %>
  <% end %>
  
  <%=link_to("Show","/books/#{@book.id}/")%><span> | </span><%=link_to("Back","/books")%>